<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ca.lotuspond.devilsdictionary"
      android:versionCode="2"
      android:versionName="1.1">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="10"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".DevilsDictionary"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
 		<activity android:name=".About"
              android:label="@string/about_label"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".BrowseDictionary"
              android:label="@string/browse_label"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".RandomDictionary"
              android:label="@string/random_label"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name="SearchDictionary"
              android:label="@string/search_label"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name="ShowBrowseResults"
              android:label="@string/results_label"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".Prefs"
      			android:label="@string/settings_title">
		</activity>
    </application>
</manifest>
